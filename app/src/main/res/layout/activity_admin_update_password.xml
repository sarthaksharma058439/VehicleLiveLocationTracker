<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b2c"
    tools:context=".AdminUpdatePassword">

    <TextView
        android:id="@+id/adminhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="Update Admin Credentials"
        android:padding="20dp"
        />

    <EditText
        android:layout_below="@+id/adminhead"
        android:id="@+id/adminusername"
        android:hint="Enter username.."
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textColor="@android:color/white"
        />
    <EditText
        android:id="@+id/adminpassword"
        android:hint="Enter password.."
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_below="@+id/adminusername"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/adminupdatepasswordbtn"
        android:layout_below="@+id/adminpassword"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update password"
        android:background="@drawable/buttons"
        android:padding="20dp"/>

</RelativeLayout>