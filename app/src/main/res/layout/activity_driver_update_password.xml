<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".DriverUpdatePassword">

    <TextView
        android:id="@+id/driverhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:padding="20dp"
        android:text="Update Driver Credentials"/>

    <EditText
        android:layout_below="@+id/driverhead"
        android:id="@+id/updatepass1"
        android:hint="enter password.."
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:background="@drawable/input_design"/>
    <EditText
        android:id="@+id/updatepass2"
        android:hint="confirm password.."
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_below="@+id/updatepass1"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:background="@drawable/input_design"/>

    <Button
        android:id="@+id/driverupdatepasswordbtn"
        android:layout_below="@+id/updatepass2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update password"
        android:padding="20dp"
        android:background="@drawable/buttons"/>

</RelativeLayout>