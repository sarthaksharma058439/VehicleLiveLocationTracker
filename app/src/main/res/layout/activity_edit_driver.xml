<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".EditDriver">

    <TextView
        android:id="@+id/adminhead2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:padding="20dp"
        android:text="Edit Driver"/>

    <EditText
        android:layout_below="@+id/adminhead2"
        android:id="@+id/editname"
        android:hint="Enter Name.."
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/editempid"
        android:hint="Enter EmpId.."
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_below="@+id/editname"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textColor="@android:color/white"/>
    <EditText
        android:id="@+id/editaddress"
        android:hint="Enter Address.."
        android:layout_below="@+id/editempid"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/editemailid"
        android:hint="Enter EmailId.."
        android:layout_below="@+id/editaddress"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textColor="@android:color/white"/>
    <EditText
        android:id="@+id/editcreatedriverpassword"
        android:hint="Enter Password.."
        android:layout_below="@+id/editemailid"
        android:textColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textColor="@android:color/white"/>

    <Spinner
        android:id="@+id/editstatusspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcreatedriverpassword"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:padding="10dp" />
    <Button
        android:id="@+id/editcreatedriverbtn"
        android:layout_below="@+id/editstatusspinner"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Driver"
        android:background="@drawable/buttons"
        android:padding="20dp"/>

</RelativeLayout>