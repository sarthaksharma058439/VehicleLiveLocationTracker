<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".HomeActicity">

    <TextView
        android:id="@+id/adminhead3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="Dashboard"/>

    <Button
        android:id="@+id/createdriver"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/adminhead3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:text="Create Driver" />
    <Button
        android:id="@+id/driverlist"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp"
        android:text="Driver List"
        android:layout_below="@+id/createdriver"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/white"/>

    <Button
        android:id="@+id/createuserbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/driverlist"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:text="Create New User" />

</RelativeLayout>